<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Servlets</display-name>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>dev.pierce.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReimbursementServlet</servlet-name>
        <servlet-class>dev.pierce.servlets.ReimbursementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReimbursementTable</servlet-name>
        <servlet-class>dev.pierce.servlets.ReimbursementTableServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReimbursementServlet</servlet-name>
        <url-pattern>/reimbursement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReimbursementTable</servlet-name>
        <url-pattern>/reimtable</url-pattern>
    </servlet-mapping>

</web-app>